---
const { class: className, as: Element = 'h2', dark, ...rest } = Astro.props;
---

<Element
  {...rest}
  data-dark={dark ? 'true' : undefined}
  class:list={[
    className,
    'font-mono text-xs/5 font-semibold tracking-widest text-gray-500 uppercase data-dark:text-gray-400',
  ]}
>
  <slot />
</Element>
