---
type Props = {
  class?: string;
  placement: `${'top' | 'bottom'} ${'right' | 'left'}`;
};

const { class: className, placement } = Astro.props;

let [yAxis, xAxis] = placement.split(' ');

let yClass = yAxis === 'top' ? '-top-2' : '-bottom-2';
let xClass = xAxis === 'left' ? '-left-2' : '-right-2';
---

<svg
  viewBox="0 0 15 15"
  aria-hidden="true"
  class:list={[className, 'absolute size-[15px] fill-black/10', yClass, xClass]}
>
  <path d="M8 0H7V7H0V8H7V15H8V8H15V7H8V0Z"></path>
</svg>
